# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  ItemName: String!
  Status: String!
}

input TodoInput{
  id: ID!
  ItemName: String!
  Status: String!
}

input NewTodo{
   ItemName: String!
   Status: String!
}

type TodoList{
  todos: [Todo!]!
}

type Query {
  #todos

  todos(input: NewTodo!): TodoList!
  getTodo(input: NewTodo!): Todo!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  updateTodo(input: TodoInput!): Todo!
}
